{
  "name": "vbase",
  "version": "2.2.0",
  "description": "A good starting base for nodejs websites.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "mocha test/index.js"
  },
  "author": "Maxwell Lang",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^5.15.4",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.3",
    "connect-flash": "^0.1.1",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.0",
    "express-mysql-session": "^2.1.5",
    "express-session": "^1.17.1",
    "mysql2": "^2.2.5",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@sentry/browser": "^5.15.4",
    "babel-loader": "^8.2.2",
    "babel-preset-minify": "^0.5.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "event-stream": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-changed": "^3.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-live-server": "0.0.31",
    "gulp-livereload": "^4.0.1",
    "gulp-prompt": "^1.2.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.1.0",
    "ignore-loader": "^0.1.2",
    "jquery": "^3.5.1",
    "minimatch": "^3.0.4",
    "mocha": "^7.1.1",
    "node-sass": "^7.0.0",
    "optipng-bin": "^6.0.0",
    "popper.js": "^1.14.3",
    "source-map-loader": "^1.1.3",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "sweetalert2": "^10.12.5",
    "terser-webpack-plugin": "4.2.3",
    "vinyl-named": "^1.1.0",
    "webpack": "^4.44.2",
    "webpack-stream": "^6.1.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "import"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true
    },
    "globals": {
      "$": true,
      "jQuery": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "arrow-parens": [
        "warn",
        "as-needed"
      ],
      "comma-dangle": [
        "warn",
        {
          "arrays": "always-multiline",
          "objects": "always",
          "imports": "never",
          "exports": "never",
          "functions": "ignore"
        }
      ],
      "consistent-return": 0,
      "func-names": 0,
      "global-require": 0,
      "guard-for-in": 0,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "^bootstrap"
          ]
        }
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": 0,
      "max-len": 0,
      "no-bitwise": 0,
      "no-console": 0,
      "no-continue": 0,
      "no-extra-boolean-cast": 0,
      "no-labels": 0,
      "no-mixed-operators": 0,
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "no-param-reassign": 0,
      "no-plusplus": 0,
      "no-prototype-builtins": 0,
      "no-restricted-properties": 0,
      "no-restricted-syntax": 0,
      "no-shadow": 0,
      "no-underscore-dangle": 0,
      "no-unused-vars": [
        "warn",
        {
          "args": "none"
        }
      ],
      "no-use-before-define": 0,
      "no-useless-escape": 0,
      "object-shorthand": 0,
      "padded-blocks": [
        "error",
        {
          "switches": "never"
        }
      ],
      "prefer-arrow-callback": 0,
      "prefer-const": [
        "warn"
      ],
      "prefer-template": 0,
      "radix": [
        "error",
        "as-needed"
      ],
      "strict": [
        0,
        "global"
      ]
    }
  },
  "eslintIgnore": [
    "dist/**/*.js",
    "public/**/*.js",
    "src/js/_plugins/**/*.js"
  ]
}
